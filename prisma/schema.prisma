  updatedAt          DateTime @default(now()) @updatedAt
  doctor             User     @relation("DoctorFormSettings", fields: [doctorId], references: [id], onDelete: Cascade, map: "ReferralFormSettings_doctorId_fkey")

  @@map("referral_form_settings")
}

